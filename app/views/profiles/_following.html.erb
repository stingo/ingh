<br>
<div class="container">
    <div class="page-header">
        <h1><%= @profile.first_name %>
        <% if current_profile.first_name == @profile.first_name %>

        <% else %>
            <% if current_profile.following?(@profile) %>
                <%= link_to("Unfollow", unfollow_profile_path(@profile), :class => 'btn btn-danger' ) %>
            <% else %>
                <%= link_to("Follow" , follow_profile_path(@profile.to_param), :remote => true, :class =>' btn btn-success' )%>
            <% end %>
        <%end %></h1>
    </div>

<% if @profiles.present? %>
    <% @profiles.each do |profile| %>
        <%= @profile.first_name %>
        <hr>
    <% end %>
<% end %>

